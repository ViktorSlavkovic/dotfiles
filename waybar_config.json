{
    "layer": "bottom",
    "modules-center": ["sway/workspaces", "sway/mode"],
    "modules-right": ["disk", "memory", "cpu", "network", "pulseaudio", "battery", "sway/language", "tray"],
    "modules-left": ["clock", "clock#mtv", "clock#nyc", "clock#lon", "clock#srb"],

    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""],
        "format-charging": "{capacity}% 🔌",
        "format-plugged": "{capacity}% 🔌"
    },
    "clock": {
        "format": "🕑 {:%Y-%b-%d %H:%M}",
        "tooltip": false
    },
    "clock#lon": {
        "format": "🇬🇧 LON {:%H:%M}",
        "tooltip": false,
        "timezone": "Europe/London"
    },
    "clock#mtv": {
        "format": "🇺🇸 MTV {:%H:%M}",
        "tooltip": false,
        "timezone": "America/Los_Angeles"
    },
    "clock#nyc": {
        "format": "🇺🇸 NYC {:%H:%M}",
        "tooltip": false,
        "timezone": "America/New_York"
    },
    "clock#srb": {
        "format": "🇷🇸 SRB {:%H:%M}",
        "tooltip": false,
        "timezone": "Europe/Belgrade"
    },
    "cpu": {
        "interval": 10,
        "format": "{}% ",
        "max-length": 10
    },
    "disk": {
        "interval": 30,
        "format": "{path} {free} ({percentage_free}%) ",
        "path": "/"
    },
    "sway/language": {
        "format": "{short} {variant} ⌨️",
        "tooltip": false
    },
    "memory": {
        "interval": 30,
        "format": "{}% ",
        "max-length": 10
    },
    "network": {
        "format-wifi": "{ifname}::{ipaddr}::{essid} ({signalStrength}%) ",
        "format-ethernet": "{ifname}::{ipaddr}/{cidr} ",
        "format-disconnected": "Disconnected ⚠",
        "on-click": "~/configs/menu.py WIFI"
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}",
        "format-muted": "🔇",
        "format-icons": {
            "headphone": "🎧",
            "hands-free": "🎧",
            "headset": "🎧",
            "phone": "📞",
            "portable": "📞",
            "car": "🏎",
            "default": ["🔈", "🔉", "🔊"]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },
    "tray": {
        "icon-size": 15,
        "spacing": 5
    }
}
